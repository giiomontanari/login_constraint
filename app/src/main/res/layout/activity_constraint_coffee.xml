<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Constraint_coffee">

    <View
        android:id="@+id/idCapuccino"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:background="#855E53"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"></View>

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_keyboard_backspace_black_24dp"
        android:tint="#ffff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cappucino"
        android:textColor="#ffff"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@+id/idCapuccino"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/idClock"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_clock"
        android:tint="#855E53"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/idFavorite"
        app:layout_constraintTop_toBottomOf="@+id/idCapuccino" />

    <ImageView
        android:id="@+id/idFavorite"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_favorite"
        android:tint="#855E53"
        app:layout_constraintLeft_toRightOf="@id/idClock"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idCapuccino" />

    <TextView
        android:id="@+id/textPreparacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15 minutos"
        app:layout_constraintLeft_toLeftOf="@id/idClock"
        app:layout_constraintRight_toRightOf="@id/idClock"
        app:layout_constraintTop_toBottomOf="@id/idClock" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="300 vezes"
        app:layout_constraintLeft_toLeftOf="@id/idFavorite"
        app:layout_constraintRight_toRightOf="@id/idFavorite"
        app:layout_constraintTop_toBottomOf="@id/idFavorite" />

    <View
        android:id="@+id/idSeparator"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_margin="16dp"
        android:background="#855E53"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textPreparacao" />

    <TextView
        android:id="@+id/textDescricao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:padding="16dp"
        android:text="Uma simples e perfeitamente extraída dose de espresso misturado com leite fresco e chocolate fazem esta bebida deliciosa."
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idSeparator" />

    <TextView
        android:id="@+id/textIngredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingredientes"
        android:textSize="30sp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textDescricao"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textStyle="bold"
        android:layout_marginTop="32dp"/>

    <ImageView
        android:id="@+id/imageIngredient1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:tint="#855E53"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textIngredients" />

    <TextView
        android:id="@+id/textIngredients1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/imageIngredient1"
        app:layout_constraintTop_toTopOf="@+id/imageIngredient1"
        android:text="1 dose expresso"
        android:textSize="18sp"/>

    <ImageView
        android:id="@+id/imageIngredient2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:tint="#855E53"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textIngredients1" />

    <TextView
        android:id="@+id/textIngredients2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/imageIngredient2"
        app:layout_constraintTop_toTopOf="@+id/imageIngredient2"
        android:text="100 ml de leite"
        android:textSize="18sp"/>

    <ImageView
        android:id="@+id/imageIngredient3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:tint="#855E53"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textIngredients2" />

    <TextView
        android:id="@+id/textIngredients3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/imageIngredient3"
        app:layout_constraintTop_toTopOf="@+id/imageIngredient3"
        android:text="1 colher de chocolate em pó"
        android:textSize="18sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>